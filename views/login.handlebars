<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="login-form">
      <div class="form-group">
        <label for="email-login">Username:</label>
        <input class="input-login-email" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="input-login-pass" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" id="login-submit" >login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="signup-form">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" id="signup-submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>