<div class = "row">
<div class="col-md-12">
    <h1>
        {{Employee Details}} 
        <a href="/seeds/employeeData.json" class = "btn btn-success pull-right" style="margin-top:5px;">Add&nbsp;New&nbsp;Employee</a>
    </h1>
    <hr />
</div>
</div>
<div class = "row">
<div class = "col-md-12">
    <div class = "table-responsive">
        <table class ="table">
        <thead>
            <tr>
                <th>Employee&nbsp;Num</th>
                <th>Full&nbsp;Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Salary</th>
                <th></th>
            </tr>
        </thead>

        <tbody id="names" class="collection with-header">
            {{#each data}}
            <tr class="collection-item">
                <td>{{{employeeNum}}}</td>
                {{!-- search employee name --}}
                <td><a id = "employeesName" href="/employee/{{employeeNum}}">{{firstName}}&nbsp;{{last_name}}</a></td>
                <td><a href="mailto:{{email}}">{{email}}</a></td>
                <td><a href="/employees?role={{role}}">{{role}}</a></td>
                <td><a href="/employees?salary={{salary}}">{{salary}}</a></td>
                <td><a href="/employee/delete/{{employeeNum}}" class="btn btn-danger">remove</a></td>
            </tr>
            {{else}}
            <tr>
                <td>No&nbsp;Data&nbsp;Available</td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>{{/each}}
        </tbody>
        </table>
        <table style="display:none">
        </table>
        <div>
            <canvas id="myChart" width="20%" height="20%" style="display: block; height: 50%; width: 50%;"></canvas>
        </div>
    </div>
</div>
</div>