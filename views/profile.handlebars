<div class="section">
  <div class="level">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="section">
  <div class="level">
    <h3>Add a new Employee</h3>

    <div class="field">
      <label class="label">First Name:</label>
      <input class="input" type="text" placeholder="First Name" />
    </div>

    <div class="field">
      <label class="label">Last Name:</label>
      <input class="input" type="text" placeholder="Last Name" />
    </div>

    <div class="field">
      <label class="label">Role:</label>
      <div class="control">
        <div class="select">
          <select>
            <option>QA Tester</option>
            <option>Software Engineer</option>
            <option>Project Leader</option>
          </select>
        </div>
      </div>
    </div>

    <div class="field">
      <label class="label">Salary:</label>
      <input class="input" type="number" placeholder="$------" />
    </div>

    <div class="field">
      <label class="label">User ID:</label>
      <input class="input" type="text" placeholder="ID #" />
    </div>

    <div class="field is-grouped">
      <div class="control">
      <button class="button">Create</button>
      </div>
    </div>

  </div>

  {{#if employee.length}}
  <div class="level employee-list">
    <h3>Current Employees:</h3>

    {{#each employees as |employee|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/employee-details/{{employee.id}}">{{employee.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{employee.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>